          <a href="/" alt ="{{ shop.name }}"><img src="{{ 'logo.png' | asset_url }}"></a>
        </div>
        <div id="logo-sm" class="hide-md hide-lg hide-xl full-width">
          <a href="/" alt ="{{ shop.name }}"><img src="{{ 'logo.png' | asset_url }}" class="center"></a>
        </div>
      </div>
      
      <div id="main-menu">
        <div id="main-menu-lg" class="hide-xs hide-sm right">
          <ul class="menu">
            {% for link in linklists.main-menu.links %}
              <li><a href="{{ link.url }}">{{ link.title }}</a></li>
            {% endfor %}
          </ul>
        </div>
