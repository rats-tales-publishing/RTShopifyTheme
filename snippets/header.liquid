<div id="header" class="container">
    <div class="row">
      <div id="util-menu">
        <div id="util-menu-lg" class="hide-xs hide-sm right">
        <ul class="menu">
          <!-- li><a href="/login"><img src="{{ 'login.png' | asset_url }}"> log in</a></li -->
          <li><a href="/cart"><img src="{{ 'cart.png' | asset_url }}"> cart: {{ cart.item_count }} {{ cart.item_count | pluralize: 'item', 'items' }} ({{ cart.total_price | money }})</a></li>
